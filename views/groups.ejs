<!DOCTYPE html>
<html lang="vi">
<head>
  <meta charset="UTF-8" />
  <title>Danh sách nhóm Zalo</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      background: #f5f5f5;
      padding: 20px;
    }

    h1 {
      text-align: center;
      color: #333;
    }

    .group-card {
      background: white;
      border-radius: 12px;
      box-shadow: 0 2px 8px rgba(0,0,0,0.1);
      padding: 20px;
      margin-bottom: 30px;
    }

    .group-title {
      margin: 0 0 10px 0;
      color: #007bff;
    }

    .member-list {
      list-style: none;
      padding: 0;
      max-height: 150px;
      overflow: hidden;
      transition: max-height 0.3s ease-in-out;
    }

    .expanded {
      max-height: none;
    }

    .member-item {
      display: flex;
      align-items: center;
      margin-bottom: 15px;
      border-bottom: 1px dashed #ddd;
      padding-bottom: 10px;
    }

    .member-item:last-child {
      border-bottom: none;
    }

    .avatar {
      width: 50px;
      height: 50px;
      border-radius: 50%;
      margin-right: 15px;
      object-fit: cover;
      border: 2px solid #007bff;
    }

    .member-info {
      display: flex;
      flex-direction: column;
    }

    .display-name {
      font-weight: bold;
      color: #333;
    }

    .zalo-name {
      font-size: 14px;
      color: #666;
    }

    .status {
      font-size: 12px;
      color: #888;
      margin-top: 5px;
    }

    .toggle-btn {
      background: #007bff;
      color: white;
      border: none;
      padding: 10px 15px;
      cursor: pointer;
      border-radius: 6px;
      display: block;
      margin: 10px auto;
    }
  </style>
  <script>
    function toggleMembers(groupId) {
      const memberList = document.getElementById("members-" + groupId);
      memberList.classList.toggle("expanded");
    }
  </script>
</head>
<body>
  <h1>Danh sách nhóm và thành viên</h1>

  <% groups.forEach(group => { %>
    <div class="group-card">
      <h2 class="group-title"><%= group.groupName %> (ID: <%= group.groupId %>)</h2>
      <p><strong>Số thành viên:</strong> <%= group.totalMember %></p>
      
      <!-- <button class="toggle-btn" onclick="toggleMembers('<%= group.groupId %>')">Xem tất cả</button> -->
    </div>
  <% }) %>
</body>
</html>
